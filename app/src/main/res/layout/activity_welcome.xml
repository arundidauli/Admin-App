<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fui_body_padding_bottom"
        android:text="Welcome to \nControl Panel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:lineSpacingExtra="5sp"
        android:layout_margin="@dimen/fui_body_padding_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/fui_body_padding_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_dasboard"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:text="Manage here everything you want \nand easy to use"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:lineSpacingExtra="3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/fui_body_padding_bottom"
        app:layout_constraintBottom_toTopOf="@+id/button_get_started" />


    <Button
        android:id="@+id/button_get_started"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/fui_body_padding_bottom"
        android:layout_marginRight="@dimen/fui_body_padding_bottom"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/button_theme"
        android:text="Get Started"/>
</androidx.constraintlayout.widget.ConstraintLayout>